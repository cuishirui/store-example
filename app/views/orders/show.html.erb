<div class="row">
  <div class="container">
    <h2>order</h2>

    <table class="table">
      <thead>
        <th>title</th>
        <th>price</th>
        <th>quantity</th>
      </thead>
      <tbody>
        <% @product_lists.each do |product_list| %>
          <tr>
            <td><%= product_list.product_name %></td>
            <td><%= product_list.product_price %></td>
            <td><%= product_list.quantity %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <hr>
    <div class="total">
      total <%= @order.total %>cny
    </div>
    <hr>
    <h2>寄送地址</h2>
    <table class="table">
      <tbody>
        <tr>
        订购人
        </tr>
        <tr>
          <%= @order.billing_name%>
        </tr>
        <tr>
        地址
        </tr>
        <tr>
          <%= @order.billing_address%>
        </tr>
      </tbody>
    </table>
  </div>
</div>
