<h1>all orders </h1>
<table class="table">
  <thead>
    <th>#</th>
    <th>time</th>
    <th>email</th>
  </thead>
  <tbody>
    <% @orders.each do |order|%>
      <tr>
        <td>
          <%= link_to order.id, admin_order_path(order)%>
        </td>
        <td>
          <%= order.created_at.to_s(:long)%>
        </td>
        <td>
          <%= order.user.email%>
        </td>
        <td>
          <%= order.aasm_state%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
