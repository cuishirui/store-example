<div class="row">
  <div class="col-md-12">
    <h2>order details(<%= render_order_paid_state( @order)%>)</h2>
    <%= render "admin/orders/state_option", order: @order%>
    <table class="table">
      <thead>
        <tr>
          <th>product detail</th>
          <th>price</th>
          <th>quantity</th>
        </tr>
      </thead>
      <tbody>
        <% @product_lists.each do |product_list|%>
          <tr>
            <td><%= product_list.product_name%></td>
            <td><%= product_list.product_price%></td>
            <td><%= product_list.quantity%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="total clearfix">
      <span>
        total <%= @order.total %> cny
      </span>
    </div>

    <hr>
    <h2> mail detail </h2>

    <table class="table">
      <tbody>
        <tr>
          <td> 订购人 </td>
        </tr>
        <tr>
          <td><%= @order.billing_name%> - <%= @order.billing_address%></td>
        </tr>
      </tbody>
    </table>
    </div>
</div>
