<div style="padding:10px; float:right;">

  <% case order.aasm_state %>
    <% when "order_placed"%>
        <%= link_to("cancel order", cancel_admin_order_path(order),
              class: "btn btn-default", method: :post)%>
    <% when "paid"%>
        <%= link_to("cancel order", cancel_admin_order_path(order),
              class: "btn btn-default", method: :post)%>
        <%= link_to("出货",ship_admin_order_path(order),
              class: "btn btn-default", method: :post)%>
    <% when "shipping"%>
        <%= link_to("设为已出货", shipped_admin_order_path(order),
              class: "btn btn-default", method: :post)%>
    <% when "shipped"%>
        <%= link_to("退货", return_admin_order_path(order),
              class: "btn btn-default", method: :post)%>
    <% when "order_cancelled"%>
        <span class="label label-default">订单取消</span>

    <% when "good_returned"%>
        <span class="label label-default">已退货</span>
  <% end %>
</div>
