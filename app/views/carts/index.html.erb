<h1>购物车</h1>
<div class="container">
  <%= link_to("clean cart", clean_carts_path, method: :delete,
                             class: "btn btn-default pull-right",
                               data: {confirm: "are you sure?"})%>
  <table class="table">
    <thead>
      <th>#</th>
      <th>title</th>
      <th>description</th>
      <th>quantity</th>
      <th>price</th>
    </thead>
    <tbody>
      <% current_cart.cart_items.each do |cart_item|%>
      <tr>
        <td><%= cart_item.product.id%></td>
        <td><%= cart_item.product.title%></td>
        <td><%= cart_item.product.description%></td>
        <td>
          <%= form_for cart_item, url: cart_item_path(cart_item.product_id) do |f|%>
            <%= f.select :quantity, 1..cart_item.product.quantity%>
            <%= f.submit "submit", data: { disable_with: "submiting..."}%>
          <% end %>
        </td>
        <td><%= cart_item.product.price%></td>
        <td><%= link_to("delete", cart_item_path(cart_item.product_id), method: :delete, class: "btn btn-danger")%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<div class="total clearfix">
  <span class="pull-right">
    <span>

      total: <%= render_cart_total_price(current_cart) %> rmb
    </span>
  </span>
</div>

<br>
<div class="checkout clearfix">
  <%= link_to("checkout", "#", method: :post, class: "btn btn-danger pull-right")%>
</div>
